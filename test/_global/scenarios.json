{
    "color_and_hello": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "color": {
                "favorite": "purple"
            },
            "hello": {
                "greeting": "Greetings"
            }
        }
    },
    "membrane_with_registry": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "./registry": {
                "registryMode": "standalone",
                "enableServiceDiscovery": true
            },
            "./membrane": {
                "membraneId": "test-membrane",
                "enableRegistry": true,
                "namespaceId": "test-namespace"
            }
        }
    },
    "orchestrator_with_registry": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "./registry": {
                "registryMode": "standalone"
            },
            "./orchestrator": {
                "orchestrationType": "docker-compose",
                "enableVisualization": true
            }
        }
    }
}